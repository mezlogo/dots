bindsym XF86AudioRaiseVolume exec "amixer -M set Master 5%+ ; pkill -RTMIN+1 i3blocks"
bindsym $mod+p exec "amixer -M set Master 5%+ ; pkill -RTMIN+1 i3blocks"
bindsym $mod+Shift+o exec "bright.sh -0.05"
bindsym $mod+Shift+p exec "bright.sh 0.05"

